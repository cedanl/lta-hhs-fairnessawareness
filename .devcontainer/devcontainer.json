{
  "name": "R Development Environment with RStudio",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "reditorsupport.r",
        "quarto.quarto"
      ],
      "settings": {
        "r.alwaysUseActiveTerminal": true,
        "r.bracketedPaste": true,
        "r.sessionWatcher": true
      }
    },
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },
  // Forward the RStudio port
  "forwardPorts": [8787],
  
  // Run renv::restore() and start RStudio Server
  "postCreateCommand": "R -e 'renv::restore(confirm = FALSE)'",
  
  // Add a command to show the URL to RStudio in the terminal
  "postStartCommand": "echo 'ðŸš€ RStudio Server is running at: https://$(hostname)-8787.app.github.dev'",
  
  // Use vscode user (default for Codespaces)
  "remoteUser": "vscode",
  
  // Show port in UI
  "portsAttributes": {
    "8787": {
      "label": "RStudio",
      "onAutoForward": "openBrowser"
    }
  }
  /*
  // Optional: Uncomment to explicitly set environment variables at runtime
  "containerEnv": {
    "DISABLE_AUTH": "true",
    "ROOT": "true"
  }
  */
}
